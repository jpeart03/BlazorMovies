@page "/counter"
@inject SingletonService singleton
@inject TransientService transient

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Singleton Value: @singleton.Value</p>
<p>Transient Value: @transient.Value</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button> 
<button class="btn btn-primary" @onclick="IncrementCount">Click me JavaScript</button> 

<input type="number" @bind="currentCount" />